<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_name_options_view"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_weight="2"
        android:text="sdfsdfsdfsdfsdfsd" />

    <TextView
        android:id="@+id/tv_price_options_view"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_weight="1"
        android:text="dfgdgfdgdgdfgdfgdg" />

    <ImageButton
        android:id="@+id/ib_link_of_options_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|right"
        android:layout_weight="1"
        android:src="@drawable/mcv_action_next" />


</FrameLayout>