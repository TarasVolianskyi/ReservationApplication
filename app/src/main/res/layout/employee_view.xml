<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImageEmployeeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvNameEmployeeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:layout_weight="2"
        android:text="sdfsdfsdfsdfsdfsd" />

    <TextView
        android:id="@+id/tvOptionsOfEmployeeEmployeeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_weight="1"
        android:text="dfgdgfdgdgdfgdfgdg" />

    <ImageButton
        android:id="@+id/ibLinkOfEmployeeView"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|right"
        android:layout_weight="1"
        android:src="@drawable/mcv_action_next" />


</FrameLayout>