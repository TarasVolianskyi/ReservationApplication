<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:text="List of offices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etNameForFBCahngeOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name (String)"/>

    <EditText
        android:id="@+id/etPriceForFBCahngeOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price (int)"/>

    <Button
        android:id="@+id/btnConnectToFBChangeOffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to FB"/>

</LinearLayout>